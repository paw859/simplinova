{% comment %}
  Professional Dropshipping Hero - Minimal & Bold
{% endcomment %}

<section class="hero">
  <div class="hero-content">
    <span class="hero-badge">Now Available</span>
    <h1>Premium Products. Fast Delivery. No Hassle.</h1>
    <p>Curated collection of bestselling items shipped directly to your door. No markup, always competitive pricing.</p>
    
    <div class="hero-buttons">
      <button class="hero-button btn-primary btn-lg">Shop Collection</button>
      <button class="hero-button btn-secondary btn-lg">Browse Categories</button>
    </div>
  </div>
</section>

<style>
  .hero {
    background: var(--color-white);
    position: relative;
    overflow: hidden;
    padding: 80px 20px;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid var(--color-gray-100);
  }

  .hero-content {
    max-width: 800px;
    text-align: center;
    position: relative;
    z-index: 2;
  }

  .hero-badge {
    display: inline-block;
    background: var(--color-bg-light);
    color: var(--color-accent);
    padding: 6px 12px;
    border-radius: var(--radius-full);
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    margin-bottom: var(--spacing-lg);
    border: 1px solid var(--color-gray-200);
  }

  .hero h1 {
    font-size: clamp(36px, 7vw, 56px);
    margin-bottom: var(--spacing-xl);
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.15;
  }

  .hero p {
    font-size: 18px;
    color: var(--color-gray-600);
    margin-bottom: var(--spacing-2xl);
    line-height: 1.8;
  }

  .hero-buttons {
    display: flex;
    gap: var(--spacing-lg);
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-button {
    padding: 14px 32px;
    font-size: 16px;
    font-weight: 600;
    border-radius: var(--radius-md);
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(0, 102, 255, 0.05) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero::after {
    content: '';
    position: absolute;
    bottom: -100px;
    left: 0;
    width: 100%;
    height: 200px;
    background: linear-gradient(180deg, transparent 0%, var(--color-bg-light) 100%);
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 60px 20px;
      min-height: 500px;
    }

    .hero h1 {
      margin-bottom: var(--spacing-lg);
    }

    .hero p {
      font-size: 16px;
      margin-bottom: var(--spacing-xl);
    }

    .hero-buttons {
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .hero-button {
      width: 100%;
    }
  }
</style>

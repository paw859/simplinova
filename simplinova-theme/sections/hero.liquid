{% comment %}
  Hero Section - Bold, Minimal, Conversion-Focused
{% endcomment %}

<section class="hero">
  <div class="hero-container">
    <div class="hero-badge">New • Simplinova</div>
    <h1 class="hero-title">Simplinova — Curated Dropshipping Finds</h1>
    <p class="hero-subtitle">Curated products from trusted suppliers. Fast worldwide shipping and risk-free returns.</p>

    <div class="hero-ctas">
      <a href="/collections/all" class="btn btn-primary btn-lg">Shop Bestsellers</a>
      <a href="/collections/new" class="btn btn-secondary btn-lg">New Arrivals</a>
    </div>
  </div>
</section>

<style>
  .hero {
    background: var(--gradient-hero);
    border-bottom: 1px solid rgba(0,0,0,0.04);
    padding: 6rem 1.5rem;
    min-height: 520px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(61, 90, 107, 0.08) 0%, transparent 70%);
    border-radius: 50%;
  }

  .hero-container {
    max-width: 800px;
    text-align: center;
    position: relative;
    z-index: 2;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(255,255,255,0.12);
    color: var(--color-accent);
    padding: 6px 14px;
    border-radius: 999px;
    font-size: 13px;
    font-weight: 700;
    letter-spacing: 0.4px;
    margin-bottom: 1rem;
    border: 1px solid rgba(255,255,255,0.08);
  }

  .hero-title {
    font-size: clamp(34px, 7vw, 56px);
    margin-bottom: 0.75rem;
    color: var(--color-white);
    line-height: 1.08;
    font-family: var(--font-display);
    font-weight: 700;
  }

  .hero-subtitle {
    font-size: clamp(16px, 2.6vw, 20px);
    color: rgba(255,255,255,0.92);
    margin-bottom: 1.5rem;
    max-width: 680px;
    margin-left: auto;
    margin-right: auto;
    font-weight: 500;
  }

  .hero-ctas {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-ctas .btn {
    min-width: 160px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--space-2xl) var(--space-md);
      min-height: 500px;
    }

    .hero-ctas {
      flex-direction: column;
      gap: var(--space-sm);
    }

    .hero-ctas .btn {
      width: 100%;
      min-width: unset;
    }
  }
</style>

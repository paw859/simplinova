{% comment %}
  Professional Dropshipping Products Grid
  Minimal, clean layout optimized for conversion
{% endcomment %}

<section class="featured-products">
  <div class="section-header">
    <h2 class="section-title">Trending Now</h2>
    <p class="section-subtitle">Best-selling items from our curated collection</p>
  </div>

  <div class="products-grid">
    {% for i in (1..8) %}
      <div class="product-card">
        <div class="product-image">
          <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
            <circle cx="12" cy="13" r="4"></circle>
          </svg>
          {% if i == 1 or i == 5 %}
            <span class="product-badge">Popular</span>
          {% elsif i == 3 %}
            <span class="product-badge">Sale</span>
          {% endif %}
        </div>

        <div class="product-info">
          <h3 class="product-title">Professional Product</h3>

          <div class="product-rating">
            <span class="star">★</span>
            <span class="star">★</span>
            <span class="star">★</span>
            <span class="star">★</span>
            <span class="star empty">★</span>
            <span class="rating-count">({{ i | times: 12 }})</span>
          </div>

          <div class="product-price">
            {% if i == 3 %}
              <span class="product-price-original">${{ i | times: 35 | plus: 89 }}.99</span>
              ${{ i | times: 28 | plus: 45 }}.99
              <span class="product-price-discount">-20%</span>
            {% else %}
              ${{ i | times: 35 | plus: 89 }}.99
            {% endif %}
          </div>

          <button class="product-btn">Add to Cart</button>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .featured-products {
    background: var(--color-white);
    padding: 60px 20px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 48px;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-title {
    font-size: clamp(28px, 5vw, 42px);
    margin-bottom: var(--spacing-lg);
    font-weight: 700;
  }

  .section-subtitle {
    font-size: 16px;
    color: var(--color-gray-600);
    margin: 0;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 24px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .product-card {
    display: flex;
    flex-direction: column;
    background: var(--color-white);
    border: 1px solid var(--color-gray-100);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
  }

  .product-card:hover {
    border-color: var(--color-gray-200);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .product-image {
    aspect-ratio: 1 / 1;
    background: var(--color-bg-light);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    color: var(--color-gray-400);
    border-bottom: 1px solid var(--color-gray-100);
  }

  .product-image svg {
    width: 48px;
    height: 48px;
  }

  .product-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: var(--color-accent);
    color: var(--color-white);
    padding: 4px 8px;
    border-radius: var(--radius-xs);
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .product-info {
    padding: var(--spacing-lg);
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .product-title {
    font-size: 14px;
    font-weight: 600;
    color: var(--color-gray-700);
    margin-bottom: var(--spacing-sm);
    line-height: 1.4;
    min-height: 32px;
  }

  .product-rating {
    display: flex;
    align-items: center;
    gap: 4px;
    margin-bottom: var(--spacing-md);
    font-size: 13px;
  }

  .star {
    color: #FFB81C;
  }

  .star.empty {
    color: var(--color-gray-300);
  }

  .rating-count {
    color: var(--color-gray-500);
    font-size: 12px;
    margin-left: auto;
  }

  .product-price {
    font-size: 16px;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .product-price-original {
    text-decoration: line-through;
    color: var(--color-gray-400);
    font-size: 14px;
    margin-right: var(--spacing-sm);
  }

  .product-price-discount {
    background: var(--color-error);
    color: var(--color-white);
    padding: 2px 6px;
    border-radius: var(--radius-xs);
    font-size: 12px;
    font-weight: 600;
  }

  .product-btn {
    width: 100%;
    background: var(--color-accent);
    color: var(--color-white);
    padding: var(--spacing-md);
    font-weight: 600;
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-base);
    font-size: 14px;
    margin-top: auto;
  }

  .product-btn:hover {
    background: var(--color-accent-dark);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .featured-products {
      padding: 40px 16px;
    }
  }

  @media (max-width: 480px) {
    .products-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

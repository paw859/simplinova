<style>
  .brand-story {
    padding: 3rem 1rem;
    background: #FFFFFF;
  }

  .brand-story-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .brand-story-visual {
    background: linear-gradient(135deg, #1E40AF 0%, #0891B2 100%);
    border-radius: 12px;
    aspect-ratio: 1 / 1;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    min-height: 500px;
  }

  .brand-story-visual::before {
    content: '';
    position: absolute;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
    animation: float 8s ease-in-out infinite;
  }

  .brand-story-icon {
    position: relative;
    z-index: 2;
    width: 120px;
    height: 120px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #FFFFFF;
    font-size: 60px;
  }

  .brand-story-content h2 {
    font-size: clamp(28px, 5vw, 42px);
    font-weight: 700;
    color: #1F2937;
    margin-bottom: 1.5rem;
    font-family: 'Poppins', 'Inter', -apple-system, sans-serif;
  }

  .brand-story-content p {
    font-size: 16px;
    color: #6B7280;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .brand-story-btn {
    display: inline-block;
    background: #1E40AF;
    color: #FFFFFF;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .brand-story-btn:hover {
    background: #1E3A8A;
    transform: translateY(-2px);
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-30px);
    }
  }

  @media (max-width: 768px) {
    .brand-story-wrapper {
      grid-template-columns: 1fr;
    }

    .brand-story-visual {
      min-height: 400px;
    }
  }
</style>

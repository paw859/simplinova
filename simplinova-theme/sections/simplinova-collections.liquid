{% comment %}
  Collections Grid Section with gradient cards
  3 collection categories with gradient backgrounds
{% endcomment %}

<section class="collections-section">
  <div class="collections-wrapper">
    <div class="section-header">
      <h2 class="section-title">Shop by Category</h2>
      <p class="section-subtitle">Explore our curated collections</p>
    </div>

    <div class="collections-grid">
      <div class="collection-card collection-new">
        <div class="collection-icon">‚ú®</div>
        <h3 class="collection-name">New Arrivals</h3>
        <p class="collection-count">12 Products</p>
        <button class="collection-btn">Shop Now</button>
      </div>

      <div class="collection-card collection-home">
        <div class="collection-icon">üè†</div>
        <h3 class="collection-name">Home Essentials</h3>
        <p class="collection-count">28 Products</p>
        <button class="collection-btn">Shop Now</button>
      </div>

      <div class="collection-card collection-tech">
        <div class="collection-icon">‚ö°</div>
        <h3 class="collection-name">Tech & Gadgets</h3>
        <p class="collection-count">45 Products</p>
        <button class="collection-btn">Shop Now</button>
      </div>
    </div>
  </div>
</section>

<style>
  .collections-section {
    padding: 3rem 1rem;
    background: #F3F4F6;
  }

  .collections-wrapper {
    max-width: 1400px;
    margin: 0 auto;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .collection-card {
    border-radius: 12px;
    overflow: hidden;
    height: 400px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #FFFFFF;
    position: relative;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .collection-card:hover {
    transform: translateY(-8px);
  }

  .collection-card.collection-new {
    background: linear-gradient(135deg, #F97316 0%, #FB923C 100%);
  }

  .collection-card.collection-home {
    background: linear-gradient(135deg, #1E40AF 0%, #0891B2 100%);
  }

  .collection-card.collection-tech {
    background: linear-gradient(135deg, #7C3AED 0%, #A78BFA 100%);
  }

  .collection-icon {
    font-size: 60px;
    margin-bottom: 1rem;
  }

  .collection-name {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 0.5rem;
    font-family: 'Poppins', 'Inter', -apple-system, sans-serif;
  }

  .collection-count {
    font-size: 14px;
    opacity: 0.9;
    margin-bottom: 1rem;
  }

  .collection-btn {
    background: rgba(255, 255, 255, 0.3);
    color: #FFFFFF;
    padding: 10px 24px;
    border: 2px solid #FFFFFF;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .collection-btn:hover {
    background: #FFFFFF;
    color: #1F2937;
  }

  @media (max-width: 768px) {
    .collections-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .collections-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
